<%= form_for(restaurant) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :stars %>
    <%= f.number_field :stars %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>